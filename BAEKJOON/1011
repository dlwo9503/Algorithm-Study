#include <iostream>
using namespace std;

int main() {
	long long t, x, y, z, a;
	cin >> t;
	for (long long i = 0; i < t; i++)
	{
		cin >> x >> y;
		z = y - x;
		for (long long j = 0; ; j++)
		{
			if (j * j >= z)
			{
				a = j;
				break;
			}
		}
		if (a * a - a < z) cout << a * 2 - 1 << '\n';
		else cout << a * 2 - 2 << '\n';
	}
}

/*
1  1
2  1 1
3  1 1 1
4  1 2 1 ----
5  1 2 1 1
6  1 2 2 1
7  1 2 2 1 1
8  1 2 2 2 1
9  1 2 3 2 1 ----
10 1 2 3 2 1 1
11 1 2 3 2 2 1
12 1 2 3 3 2 1
13 1 2 3 3 2 1 1
14 1 2 3 3 2 2 1
15 1 2 3 3 3 2 1
16 1 2 3 4 3 2 1 ----
17 1 2 3 4 3 2 1 1
*/
